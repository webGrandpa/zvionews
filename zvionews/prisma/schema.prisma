// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Blueprint for a User
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  posts     Post[]
}

// Model for Categories
model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  slug  String @unique
  posts Post[]
}

// Blueprint for a news Post
model Post {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  title       String
  slug        String   @unique
  content     String
  imageUrl    String
  views       Int      @default(0)  
  author      User     @relation(fields: [authorId], references: [id])
  authorId    Int
  
  // Relates a post to a Category
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
}

enum Role {
  USER
  ADMIN
}